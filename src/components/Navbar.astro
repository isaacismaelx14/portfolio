---
import SettingsDropdown from "./SettingsDropdown.astro";
import MobileMenu from "./MobileMenu.astro";
import NavLinks from "./NavLinks.astro";
import I18nLink from "./I18nLink.astro";
import { getLangFromUrl, useTranslations, languages } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentPath = Astro.url.pathname;

function getLocalizedPath(targetLang: string) {
    const hasLangPrefix = Object.keys(languages).some((l) =>
        currentPath.startsWith(`/${l}`),
    );

    let cleanPath = currentPath;
    if (hasLangPrefix) {
        const parts = currentPath.split("/");
        cleanPath = "/" + parts.slice(2).join("/");
    } else if (currentPath === "/") {
        cleanPath = "/";
    }

    if (!cleanPath.startsWith("/")) {
        cleanPath = "/" + cleanPath;
    }

    if (targetLang === "en") {
        return cleanPath === "" ? "/" : cleanPath;
    }

    return `/${targetLang}${cleanPath === "/" ? "" : cleanPath}`;
}

