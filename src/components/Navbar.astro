---
import SettingsDropdown from "./SettingsDropdown.astro";
import SettingsPanel from "./SettingsPanel.astro";
import MobileMenu from "./MobileMenu.astro";
import NavLinks from "./NavLinks.astro";
import I18nLink from "./I18nLink.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import SettingsIcon from "./icons/SettingsIcon.astro";
import CloseIcon from "./icons/CloseIcon.astro";
import MenuIcon from "./icons/MenuIcon.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<nav
  class="fixed top-0 left-0 right-0 z-50 bg-gray-50/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200/50 dark:border-gray-700/50"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex-shrink-0 flex items-center">
        <I18nLink
          href="/"
          class="text-xl font-bold tracking-tight text-gray-900 dark:text-white hover:text-gray-700 dark:hover:text-gray-300 transition-colors group relative"
        >
          Dev<span
            class="text-transparent group-hover:text-blue-500 transition-colors"
            >.</span
          >
          <span
            class="absolute -top-1 -right-2 text-[10px] text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity select-none"
            title="Secret">7</span
          >
        </I18nLink>
      </div>
      <div class="hidden sm:flex sm:space-x-8 items-center">
        <NavLinks orientation="horizontal" />
        <SettingsDropdown />
      </div>
      <!-- Mobile buttons -->
      <div class="flex items-center sm:hidden space-x-2 relative">
        <!-- Mobile settings button -->
        <div class="relative" id="mobile-settings-btn-container">
          <button
            id="mobile-settings-btn"
            type="button"
            class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 dark:text-gray-200 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500 transition-colors"
            aria-label="Settings"
          >
            <SettingsIcon class="h-6 w-6" stroke-width="2" />
          </button>

          <!-- Mobile Settings Tooltip -->
          <div
            id="mobile-settings-tooltip"
            class="absolute top-full right-0 mt-3 w-56 p-3 bg-gray-900 text-white text-xs rounded-lg shadow-xl border border-gray-700 transform transition-all duration-500 opacity-0 translate-y-2 pointer-events-none z-50 hidden"
          >
            <div
              class="absolute -top-2 right-4 w-3 h-3 bg-gray-900 border-t border-l border-gray-700 transform rotate-45"
            >
            </div>
            <div class="relative z-10">
              <div class="flex justify-between items-start mb-1.5">
                <span class="font-mono text-blue-400 font-bold text-[10px]"
                  >> {t("settings.tooltip.title")}</span
                >
                <button
                  id="close-mobile-tooltip"
                  class="text-gray-500 hover:text-white transition-colors -mt-0.5 -mr-0.5"
                  aria-label="Close tooltip"
                >
                  <CloseIcon class="h-3.5 w-3.5" />
                </button>
              </div>
              <p class="text-gray-300 text-[11px] leading-relaxed">
                {t("settings.tooltip.desc")}
              </p>
            </div>
          </div>
        </div>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-btn"
          type="button"
          class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 dark:text-gray-200 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500 transition-colors"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <MenuIcon class="block h-6 w-6" stroke-width="2" />
        </button>
      </div>
    </div>
  </div>
</nav>

<!-- Mobile Settings Modal -->
<div
  id="mobile-settings-backdrop"
  class="fixed inset-0 z-[9998] bg-black/30 backdrop-blur-sm opacity-0 invisible pointer-events-none transition-all duration-300 sm:hidden"
  aria-hidden="true"
>
</div>

<div
  id="mobile-settings-modal"
  class="fixed top-20 right-4 z-[9999] w-[calc(100%-2rem)] max-w-xs opacity-0 invisible pointer-events-none transition-all duration-300 transform scale-95 origin-top-right sm:hidden"
  aria-hidden="true"
>
  <div
    class="bg-white dark:bg-gray-900 rounded-xl shadow-2xl border border-gray-200 dark:border-gray-700 overflow-hidden"
  >
    <!-- Window Header -->
    <div
      class="flex items-center justify-between px-4 py-3 bg-gray-100 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700"
    >
      <div class="flex items-center gap-2">
        <button
          id="close-mobile-settings-btn"
          type="button"
          class="group w-3 h-3 rounded-full bg-red-500 hover:bg-red-600 transition-colors flex items-center justify-center cursor-pointer"
          aria-label="Close settings"
        >
          <CloseIcon
            class="w-2 h-2 text-red-900 opacity-0 group-hover:opacity-100 transition-opacity"
            stroke-width="3"
          />
        </button>
        <span class="w-3 h-3 rounded-full bg-yellow-500"></span>
        <span class="w-3 h-3 rounded-full bg-green-500"></span>
        <span class="ml-2 font-mono text-xs text-gray-500 dark:text-gray-400"
          >~/settings</span
        >
      </div>
    </div>

    <!-- Content - Using shared SettingsPanel component -->
    <SettingsPanel variant="mobile" showHeader={false} />
  </div>
</div>

<!-- Mobile menu rendered outside nav for proper stacking -->
<MobileMenu />

<script>
  import {
    initThemeButtons,
    dismissTooltip,
    showTooltip,
    updateThemeButtons,
    getTheme,
  } from "../scripts/theme";

  function openMobileSettings() {
    const modal = document.getElementById("mobile-settings-modal");
    const backdrop = document.getElementById("mobile-settings-backdrop");

    if (modal && backdrop) {
      backdrop.classList.remove(
        "opacity-0",
        "pointer-events-none",
        "invisible",
      );
      setTimeout(() => {
        modal.classList.remove(
          "opacity-0",
          "pointer-events-none",
          "invisible",
          "scale-95",
        );
        modal.classList.add("scale-100");
      }, 50);
      modal.setAttribute("aria-hidden", "false");
      backdrop.setAttribute("aria-hidden", "false");
    }
  }

  function closeMobileSettings() {
    const modal = document.getElementById("mobile-settings-modal");
    const backdrop = document.getElementById("mobile-settings-backdrop");

    if (modal && backdrop) {
      modal.classList.add("opacity-0", "scale-95");
      modal.classList.remove("scale-100");
      setTimeout(() => {
        backdrop.classList.add("opacity-0", "pointer-events-none", "invisible");
        modal.classList.add("pointer-events-none", "invisible");
      }, 150);
      modal.setAttribute("aria-hidden", "true");
      backdrop.setAttribute("aria-hidden", "true");
    }
  }

  // Expose functions globally
  (window as any).openMobileSettings = openMobileSettings;
  (window as any).closeMobileSettings = closeMobileSettings;

  function initMobileNav() {
    const mobileMenuBtn = document.getElementById("mobile-menu-btn");
    const mobileSettingsBtn = document.getElementById("mobile-settings-btn");
    const closeMobileSettingsBtn = document.getElementById(
      "close-mobile-settings-btn",
    );
    const backdrop = document.getElementById("mobile-settings-backdrop");
    const closeMobileTooltipBtn = document.getElementById(
      "close-mobile-tooltip",
    );

    // Initialize mobile theme buttons using shared utility
    initThemeButtons(".mobile-theme-select-btn");

    // Sync all theme buttons
    const allThemeBtns = document.querySelectorAll(
      ".theme-select-btn, .mobile-theme-select-btn",
    );
    updateThemeButtons(allThemeBtns, getTheme());

    // Show mobile tooltip for first-time visitors (only on mobile)
    const isMobile = window.innerWidth < 640;
    if (isMobile) {
      showTooltip("mobile-settings-tooltip", "mobile-settings-tooltip-seen");
    }

    if (closeMobileTooltipBtn) {
      closeMobileTooltipBtn.addEventListener("click", (e) => {
        e.stopPropagation();
        dismissTooltip(
          "mobile-settings-tooltip",
          "mobile-settings-tooltip-seen",
        );
      });
    }

    if (mobileMenuBtn) {
      mobileMenuBtn.addEventListener("click", () => {
        if (typeof (window as any).openMobileMenu === "function") {
          (window as any).openMobileMenu();
        }
      });
    }

    if (mobileSettingsBtn) {
      mobileSettingsBtn.addEventListener("click", () => {
        openMobileSettings();
        dismissTooltip(
          "mobile-settings-tooltip",
          "mobile-settings-tooltip-seen",
        );
      });
    }

    if (closeMobileSettingsBtn) {
      closeMobileSettingsBtn.addEventListener("click", () => {
        closeMobileSettings();
      });
    }

    if (backdrop) {
      backdrop.addEventListener("click", () => {
        closeMobileSettings();
      });
    }

    // Handle escape key
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") {
        closeMobileSettings();
      }
    });
  }

  document.addEventListener("astro:page-load", initMobileNav);
</script>
