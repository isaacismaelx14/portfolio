---
interface Props {
    name: string;
    icon?: string; // Optional icon class or SVG string
}

const { name } = Astro.props;
---

<div
    class="flex items-center justify-center p-3 sm:p-4 bg-white dark:bg-gray-800 border border-gray-100 dark:border-gray-700 rounded-xl shadow-sm hover:shadow-md transition-all hover:-translate-y-0.5"
>
    <span class="font-medium text-sm sm:text-base text-gray-700 dark:text-gray-300">{name}</span>
</div>
