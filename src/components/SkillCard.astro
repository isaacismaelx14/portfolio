---
interface Props {
    name: string;
    icon?: string; // Optional icon class or SVG string
}

const { name } = Astro.props;
---

<div
    class="flex items-center justify-center p-3 sm:p-4 bg-white dark:bg-gray-800 border border-gray-100 dark:border-gray-700 rounded-xl shadow-sm hover:shadow-md transition-all hover:-translate-y-0.5 group relative"
>
    <span
        class="font-medium text-sm sm:text-base text-gray-700 dark:text-gray-300"
    >
        {name}
        {
            name.toLocaleLowerCase().includes("typescript") && (
                <span
                    class="absolute top-1 right-2 opacity-20 group-hover:opacity-100 transition-all duration-300 text-[10px] text-gray-400 dark:text-gray-600 group-hover:text-blue-600 dark:group-hover:text-blue-400 font-bold select-none"
                    title="Secret"
                >
                    9
                </span>
            )
        }
    </span>
</div>
