---
interface Props {
    name: string;
    icon?: string; // Optional icon class or SVG string
}

const { name } = Astro.props;
---

<div
    class="flex items-center justify-center p-4 bg-white border border-gray-100 rounded-xl shadow-sm hover:shadow-md transition-all hover:-translate-y-0.5"
>
    <span class="font-medium text-gray-700">{name}</span>
</div>
