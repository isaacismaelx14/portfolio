                            clip-rule="evenodd"></path>
                    </svg>
                </button>
            </div>
            <p class="text-gray-300 mb-2">
                {t("settings.tooltip.desc")}
            </p>
            <div
                class="flex items-center gap-2 text-gray-500 text-[10px] font-mono"
            >
                <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"
                ></span>
                <span>{t("settings.tooltip.status")}</span>
            </div>
        </div>
    </div>
</div>

<script>
    function initSettingsDropdown() {
        const button = document.getElementById("settings-menu-button");
        const dropdown = document.getElementById("settings-menu-dropdown");
        const container = document.getElementById("settings-menu-container");
        const themeBtns = document.querySelectorAll(".theme-select-btn");

        // Tooltip Elements
        const tooltip = document.getElementById("settings-tooltip");
        const closeBtn = document.getElementById("close-tooltip");

        // Theme Logic
        function getTheme() {
            if (localStorage.getItem("color-theme")) {
                return localStorage.getItem("color-theme");
            }
            if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
                return "dark";
            }
            return "light";
        }

        function setTheme(theme) {
            localStorage.setItem("color-theme", theme);
            if (theme === "dark") {
                document.documentElement.classList.add("dark");
            } else {
                document.documentElement.classList.remove("dark");
            }
            updateThemeUI(theme);
        }

        function updateThemeUI(theme) {
            themeBtns.forEach((btn) => {
                const btnTheme = btn.getAttribute("data-theme");
                if (btnTheme === theme) {
                    btn.classList.add(
                        "bg-white",
                        "dark:bg-gray-700",
                        "shadow-sm",
                        "text-gray-900",
                        "dark:text-white",
                    );
                    btn.classList.remove(
                        "text-gray-500",
                        "dark:text-gray-400",
                        "hover:text-gray-700",
                    );
                } else {
                    btn.classList.remove(
                        "bg-white",
                        "dark:bg-gray-700",
                        "shadow-sm",
                        "text-gray-900",
                        "dark:text-white",
                    );
                    btn.classList.add(
                        "text-gray-500",
                        "dark:text-gray-400",
                        "hover:text-gray-700",
                    );
                }
            });
        }

        // Initialize Theme UI
        updateThemeUI(getTheme());

        themeBtns.forEach((btn) => {
            btn.addEventListener("click", (e) => {
                e.stopPropagation(); // Prevent closing dropdown
                const theme = btn.getAttribute("data-theme");
                if (theme) setTheme(theme);
            });
        });

        // Tooltip Logic
        const dismissTooltip = () => {
            if (tooltip) {
                localStorage.setItem("settings-tooltip-seen", "true");
                tooltip.classList.add(
                    "opacity-0",
                    "translate-y-2",
                    "pointer-events-none",
                );
                setTimeout(() => {
                    tooltip.classList.add("hidden");
                }, 500);
            }
        };

        if (tooltip && closeBtn) {
            const hasSeenTooltip = localStorage.getItem(
                "settings-tooltip-seen",
            );

            if (!hasSeenTooltip) {
                // Show tooltip after a short delay
                setTimeout(() => {
                    tooltip.classList.remove("hidden");
                    requestAnimationFrame(() => {
                        tooltip.classList.remove(
                            "opacity-0",
                            "translate-y-2",
                            "pointer-events-none",
                        );
                    });
                }, 1500);
            }

            closeBtn.addEventListener("click", (e) => {
                e.stopPropagation();
                dismissTooltip();
            });
        }

        // Dropdown Logic
        if (button && dropdown && container) {
            let isOpen = false;

            const toggleMenu = () => {
                isOpen = !isOpen;
                button.setAttribute("aria-expanded", isOpen.toString());
                if (isOpen) {
                    dropdown.classList.remove(
                        "opacity-0",
                        "scale-95",
                        "pointer-events-none",
                    );
                    dropdown.classList.add("opacity-100", "scale-100");
                } else {
                    dropdown.classList.remove("opacity-100", "scale-100");
                    dropdown.classList.add(
                        "opacity-0",
                        "scale-95",
                        "pointer-events-none",
                    );
                }
            };

            button.addEventListener("click", (e) => {
                e.stopPropagation();
                toggleMenu();
                // Always try to dismiss tooltip when opening menu
                dismissTooltip();
            });

            document.addEventListener("click", (event) => {
                if (!container.contains(event.target as Node)) {
                    if (isOpen) toggleMenu();
                }
            });

            document.addEventListener("keydown", (e) => {
                if (e.key === "Escape" && isOpen) {
                    toggleMenu();
                }
            });
        }
    }

    // Run on every page load
    document.addEventListener("astro:page-load", initSettingsDropdown);
</script>
