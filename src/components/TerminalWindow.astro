---
interface Props {
    title?: string;
    class?: string;
}

const { title = "isaac.sh", class: className } = Astro.props;
---

<div
    class={`bg-white rounded-xl shadow-2xl border border-gray-200 overflow-hidden ${className}`}
>
    <!-- Window Header -->
    <div
        class="bg-gray-100 px-4 py-3 border-b border-gray-200 flex items-center justify-between sticky top-0 z-10"
    >
        <div class="flex gap-2">
            <div class="w-3 h-3 rounded-full bg-red-400"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
            <div class="w-3 h-3 rounded-full bg-green-400"></div>
        </div>
        <div class="text-xs text-gray-500 font-mono flex items-center gap-2">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-3 w-3"
                viewBox="0 0 20 20"
                fill="currentColor"
            >
                <path
                    fill-rule="evenodd"
                    d="M2 5a2 2 0 012-2h12a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm3.293 1.293a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 01-1.414-1.414L7.586 9 5.293 6.707a1 1 0 010-1.414zM9 10a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z"
                    clip-rule="evenodd"></path>
            </svg>
            {title}
        </div>
        <div class="w-12"></div>
        <!-- Spacer -->
    </div>

    <!-- Content -->
    <div class="bg-white min-h-[500px]">
        <slot />
    </div>
</div>
