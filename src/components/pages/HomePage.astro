---
import Layout from "../../layouts/Layout.astro";
import Hero from "../Hero.astro";
import ProjectCard from "../ProjectCard.astro";
import Section from "../Section.astro";
import FeatureCard from "../FeatureCard.astro";
import { getLocalizedProjects } from "../../data/projects";
import { getPageDescription } from "../../data/about";
import { useTranslations, useTranslatedPath } from "../../i18n/utils";
import type { Lang } from "../../types";

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const featuredProjects = getLocalizedProjects(lang).filter((p) => p.featured);
const pageDescription = getPageDescription("home", lang);
---

<Layout 
    title="Isaac Martinez | Software Architect"
    description={pageDescription}
    fullWidth={true}
>
    <Hero name="Isaac Martinez" role={t("home.role")} description="" />

    <!-- Social Proof -->
    <Section
        class="!py-6 border-b border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-900/50"
    >
        <div class="text-center">
            <p
                class="text-sm font-medium text-gray-500 dark:text-gray-400 uppercase tracking-widest"
            >
                {t("home.trustedBy")}
            </p>
        </div>
    </Section>

    <!-- Specialization / Skills Grid -->
    <Section>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <FeatureCard
                title={t("home.features.architecture.title")}
                description={t("home.features.architecture.desc")}
                iconBgColor="bg-blue-100 dark:bg-blue-900/30"
                iconColor="text-blue-600 dark:text-blue-400"
            >
                <svg
                    slot="icon"
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                    ></path>
                </svg>
            </FeatureCard>
            <FeatureCard
                title={t("home.features.backend.title")}
                description={t("home.features.backend.desc")}
                iconBgColor="bg-green-100 dark:bg-green-900/30"
                iconColor="text-green-600 dark:text-green-400"
            >
                <svg
                    slot="icon"
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
                    ></path>
                </svg>
            </FeatureCard>
            <FeatureCard
                title={t("home.features.ai.title")}
                description={t("home.features.ai.desc")}
                iconBgColor="bg-purple-100 dark:bg-purple-900/30"
                iconColor="text-purple-600 dark:text-purple-400"
            >
                <svg
                    slot="icon"
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
            </FeatureCard>
            <FeatureCard
                title={t("home.features.cloud.title")}
                description={t("home.features.cloud.desc")}
                iconBgColor="bg-orange-100 dark:bg-orange-900/30"
                iconColor="text-orange-600 dark:text-orange-400"
            >
                <svg
                    slot="icon"
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"
                    ></path>
                </svg>
            </FeatureCard>
        </div>
    </Section>

    <!-- CTA Section - Full Width -->
    <section class="py-16 bg-gradient-to-br from-blue-600 to-blue-800 dark:from-gray-800 dark:to-gray-900 relative overflow-hidden">
        <div class="absolute inset-0 opacity-10">
            <div class="absolute top-0 left-0 w-72 h-72 bg-white rounded-full -translate-x-1/2 -translate-y-1/2"></div>
            <div class="absolute bottom-0 right-0 w-96 h-96 bg-white rounded-full translate-x-1/3 translate-y-1/3"></div>
        </div>
        <div class="max-w-3xl mx-auto text-center relative z-10 px-4 sm:px-6 lg:px-8">
            <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4">
                {t("home.cta.title")}
            </h2>
            <p class="text-lg text-blue-100 dark:text-gray-300 mb-8">
                {t("home.cta.description")}
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href={translatePath("/about")}
                    class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-white text-blue-700 dark:text-gray-900 font-semibold rounded-lg hover:bg-blue-50 dark:hover:bg-gray-100 transition-colors shadow-lg hover:shadow-xl"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    {t("home.cta.aboutButton")}
                </a>
                <button
                    id="home-download-resume-btn"
                    data-about-url={translatePath("/about")}
                    class="inline-flex items-center justify-center gap-2 px-6 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white/10 transition-colors cursor-pointer"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    {t("home.cta.resumeButton")}
                </button>
            </div>
        </div>
    </section>

    <Section class="!py-12 bg-gray-50 dark:bg-gray-900">
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-end gap-4 mb-8 sm:mb-12">
            <div>
                <h2
                    class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    {t("home.featuredProjects")}
                </h2>
                <p class="text-sm sm:text-base text-gray-500 dark:text-gray-400">
                    {t("home.featuredProjectsDesc")}
                </p>
            </div>
            <a
                href={translatePath("/projects")}
                class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white font-medium flex items-center gap-1 group text-sm sm:text-base shrink-0"
            >
                {t("home.viewAll")}
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4 transition-transform group-hover:translate-x-1"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
            {featuredProjects.map((project) => <ProjectCard {...project} />)}
        </div>
    </Section>

    <!-- Personal Bio -->
    <Section
        class="bg-gray-50 dark:bg-gray-900 border-t border-gray-100 dark:border-gray-800"
    >
        <div class="max-w-3xl mx-auto text-center">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
                {t("home.beyondCode")}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed">
                {t("home.beyondCodeDesc")}
            </p>
        </div>
    </Section>
</Layout>

<script>
    import { navigate } from "astro:transitions/client";

    function initDownloadButton() {
        const btn = document.getElementById("home-download-resume-btn");
        if (!btn) return;

        const newBtn = btn.cloneNode(true) as HTMLElement;
        btn.parentNode?.replaceChild(newBtn, btn);

        newBtn.addEventListener("click", async () => {
            const aboutUrl = newBtn.dataset.aboutUrl || "/en/about";
            sessionStorage.setItem("trigger-resume-download", "true");
            navigate(aboutUrl);
        });
    }

    initDownloadButton();
    document.addEventListener("astro:page-load", initDownloadButton);
</script>
