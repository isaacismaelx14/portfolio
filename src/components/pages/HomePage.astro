---
import Layout from "../../layouts/Layout.astro";
import Hero from "../Hero.astro";
import ProjectCard from "../ProjectCard.astro";
import Section from "../Section.astro";
import FeatureCard from "../FeatureCard.astro";
import { projects } from "../../data/projects";
import { useTranslations } from "../../i18n/utils";

interface Props {
    lang: "en" | "es";
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const featuredProjects = projects.filter((project) => project.featured);
---

<Layout title={`Portfolio | ${t("nav.home")}`}>
    <Hero name="Isaac Martinez" role={t("home.role")} description="" />

    <!-- Social Proof -->
    <Section
        class="!py-6 border-b border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-900/50"
    >
        <div class="text-center">
            <p
                class="text-sm font-medium text-gray-500 dark:text-gray-400 uppercase tracking-widest"
            >
                {t("home.trustedBy")}
            </p>
        </div>
    </Section>

    <!-- Specialization / Skills Grid -->
    <Section>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <FeatureCard
                title={t("home.features.architecture.title")}
                description={t("home.features.architecture.desc")}
                iconBgColor="bg-blue-100 dark:bg-blue-900/30"
                iconColor="text-blue-600 dark:text-blue-400"
            >
                <svg
                    slot="icon"
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                    ></path>
                </svg>
            </FeatureCard>
            <FeatureCard
                title={t("home.features.backend.title")}
                description={t("home.features.backend.desc")}
                iconBgColor="bg-green-100 dark:bg-green-900/30"
                iconColor="text-green-600 dark:text-green-400"
            >
                <svg
                    slot="icon"
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
                    ></path>
                </svg>
            </FeatureCard>
            <FeatureCard
                title={t("home.features.ai.title")}
                description={t("home.features.ai.desc")}
                iconBgColor="bg-purple-100 dark:bg-purple-900/30"
                iconColor="text-purple-600 dark:text-purple-400"
            >
                <svg
                    slot="icon"
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
            </FeatureCard>
            <FeatureCard
                title={t("home.features.cloud.title")}
                description={t("home.features.cloud.desc")}
                iconBgColor="bg-orange-100 dark:bg-orange-900/30"
                iconColor="text-orange-600 dark:text-orange-400"
            >
                <svg
                    slot="icon"
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"
                    ></path>
                </svg>
            </FeatureCard>
        </div>
    </Section>

    <Section class="!py-12 bg-gray-50 dark:bg-gray-900">
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-end gap-4 mb-8 sm:mb-12">
            <div>
                <h2
                    class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    {t("home.featuredProjects")}
                </h2>
                <p class="text-sm sm:text-base text-gray-500 dark:text-gray-400">
                    {t("home.featuredProjectsDesc")}
                </p>
            </div>
            <a
                href={`/${lang === "en" ? "" : lang + "/"}projects`}
                class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white font-medium flex items-center gap-1 group text-sm sm:text-base shrink-0"
            >
                {t("home.viewAll")}
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4 transition-transform group-hover:translate-x-1"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
            {featuredProjects.map((project) => <ProjectCard {...project} />)}
        </div>
    </Section>

    <!-- Personal Bio -->
    <Section
        class="bg-gray-50 dark:bg-gray-900 border-t border-gray-100 dark:border-gray-800"
    >
        <div class="max-w-3xl mx-auto text-center">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
                {t("home.beyondCode")}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed">
                {t("home.beyondCodeDesc")}
            </p>
        </div>
    </Section>
</Layout>
