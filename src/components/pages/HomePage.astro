---
import Layout from "../../layouts/Layout.astro";
import Hero from "../Hero.astro";
import ProjectCard from "../ProjectCard.astro";
import Section from "../Section.astro";
import FeatureCard from "../FeatureCard.astro";
import { getLocalizedProjects } from "../../data/projects";
import { getPageDescription } from "../../data/about";
import { useTranslations, useTranslatedPath } from "../../i18n/utils";
import type { Lang } from "../../types";
import FrontendIcon from "../icons/FrontendIcon.astro";
import BackendIcon from "../icons/BackendIcon.astro";
import AiIcon from "../icons/AiIcon.astro";
import CloudIcon from "../icons/CloudIcon.astro";
import UserIcon from "../icons/UserIcon.astro";
import DocumentIcon from "../icons/DocumentIcon.astro";
import ArrowRightIcon from "../icons/ArrowRightIcon.astro";
import MailIcon from "../icons/MailIcon.astro";

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const featuredProjects = getLocalizedProjects(lang).filter((p) => p.featured);
const pageDescription = getPageDescription("home", lang);
---

<Layout
    title="Isaac Martinez | Full Stack Developer"
    description={pageDescription}
    fullWidth={true}
>
    <Hero name="Isaac Martinez" role={t("home.role")} description="" />

    <!-- Social Proof -->
    <Section
        class="!py-6 border-b border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-900/50"
    >
        <div class="text-center">
            <p
                class="text-sm font-medium text-gray-500 dark:text-gray-400 uppercase tracking-widest"
            >
                {t("home.trustedBy")}
            </p>
        </div>
    </Section>

    <!-- Specialization / Skills Grid -->
    <Section>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <FeatureCard
                title={t("home.features.frontend.title")}
                description={t("home.features.frontend.desc")}
                stack={["React", "Astro", "Tailwind", "TypeScript"]}
            >
                <FrontendIcon slot="icon" class="h-5 w-5" />
            </FeatureCard>
            <FeatureCard
                title={t("home.features.backend.title")}
                description={t("home.features.backend.desc")}
                stack={["Node.js", "NestJS", "PostgreSQL", "gRPC"]}
            >
                <BackendIcon slot="icon" class="h-5 w-5" />
            </FeatureCard>
            <FeatureCard
                title={t("home.features.ai.title")}
                description={t("home.features.ai.desc")}
                stack={["Python", "LangChain", "OpenAI", "RAG"]}
            >
                <AiIcon slot="icon" class="h-5 w-5" />
            </FeatureCard>
            <FeatureCard
                title={t("home.features.cloud.title")}
                description={t("home.features.cloud.desc")}
                stack={["AWS", "Docker", "K8s", "Terraform"]}
            >
                <CloudIcon slot="icon" class="h-5 w-5" />
            </FeatureCard>
        </div>
    </Section>

    <!-- CTA Section - Full Width -->
    <section
        class="py-16 bg-gradient-to-br from-blue-600 to-blue-800 dark:from-gray-800 dark:to-gray-900 relative overflow-hidden"
    >
        <div class="absolute inset-0 opacity-10">
            <div
                class="absolute top-0 left-0 w-72 h-72 bg-white rounded-full -translate-x-1/2 -translate-y-1/2"
            >
            </div>
            <div
                class="absolute bottom-0 right-0 w-96 h-96 bg-white rounded-full translate-x-1/3 translate-y-1/3"
            >
            </div>
        </div>
        <div
            class="max-w-3xl mx-auto text-center relative z-10 px-4 sm:px-6 lg:px-8"
        >
            <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4">
                {t("home.cta.title")}
            </h2>
            <p class="text-lg text-blue-100 dark:text-gray-300 mb-8">
                {t("home.cta.description")}
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href={translatePath("/about")}
                    class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-white text-blue-700 dark:text-gray-900 font-semibold rounded-lg hover:bg-blue-50 dark:hover:bg-gray-100 transition-colors shadow-lg hover:shadow-xl"
                >
                    <UserIcon class="h-5 w-5" />
                    {t("home.cta.aboutButton")}
                </a>
                <button
                    id="home-download-resume-btn"
                    data-about-url={translatePath("/about")}
                    class="inline-flex items-center justify-center gap-2 px-6 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white/10 transition-colors cursor-pointer"
                >
                    <DocumentIcon class="h-5 w-5" />
                    {t("home.cta.resumeButton")}
                </button>
            </div>
        </div>
    </section>

    <Section class="!py-12 bg-gray-50 dark:bg-gray-900">
        <div
            class="flex flex-col sm:flex-row sm:justify-between sm:items-end gap-4 mb-8 sm:mb-12"
        >
            <div>
                <h2
                    class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    {t("home.featuredProjects")}
                </h2>
                <p
                    class="text-sm sm:text-base text-gray-500 dark:text-gray-400"
                >
                    {t("home.featuredProjectsDesc")}
                </p>
            </div>
            <a
                href={translatePath("/projects")}
                class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white font-medium flex items-center gap-1 group text-sm sm:text-base shrink-0"
            >
                {t("home.viewAll")}
                <ArrowRightIcon
                    class="h-4 w-4 transition-transform group-hover:translate-x-1"
                />
            </a>
        </div>

        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8"
        >
            {featuredProjects.map((project) => <ProjectCard {...project} />)}
        </div>
    </Section>

    <!-- Personal Bio -->
    <Section
        class="bg-gray-50 dark:bg-gray-900 border-t border-gray-100 dark:border-gray-800"
    >
        <div class="max-w-3xl mx-auto text-center">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
                {t("home.beyondCode")}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed mb-8">
                {t("home.beyondCodeDesc")}
            </p>
            <a
                href={translatePath("/contact")}
                class="inline-flex items-center justify-center gap-2 px-6 sm:px-8 py-3.5 sm:py-4 text-sm sm:text-base font-bold rounded-xl text-white bg-gray-900 dark:bg-white dark:text-gray-900 hover:bg-gray-800 dark:hover:bg-gray-100 transition-all hover:scale-[1.02] shadow-lg hover:shadow-xl"
            >
                <MailIcon class="h-5 w-5" />
                {t("home.contactCta")}
            </a>
        </div>
    </Section>
</Layout>

<script>
    import { navigate } from "astro:transitions/client";

    function initDownloadButton() {
        const btn = document.getElementById("home-download-resume-btn");
        if (!btn) return;

        const newBtn = btn.cloneNode(true) as HTMLElement;
        btn.parentNode?.replaceChild(newBtn, btn);

        newBtn.addEventListener("click", async () => {
            const aboutUrl = newBtn.dataset.aboutUrl || "/en/about";
            sessionStorage.setItem("trigger-resume-download", "true");
            navigate(aboutUrl);
        });
    }

    initDownloadButton();
    document.addEventListener("astro:page-load", initDownloadButton);
</script>
