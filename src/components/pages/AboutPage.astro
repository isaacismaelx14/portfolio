---
import Layout from "../../layouts/Layout.astro";
import TimelineItem from "../TimelineItem.astro";
import SkillCard from "../SkillCard.astro";
import Section from "../Section.astro";
import PageHeader from "../PageHeader.astro";
import { useTranslations } from "../../i18n/utils";

interface Props {
    lang: "en" | "es";
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const experience = [
    {
        year: "2025 - Present",
        title: "Software Architecture [AI Focused]",
        company: "WGSN (Remote)",
        description:
            "Maintain an internal model used to manage company data and provide users with forecasts and insights. Enhanced security and performance by developing an AWS Lambda with WebSocket streaming. Collaborate with cross-functional teams to create documentation and identify optimal solutions.",
    },
    {
        year: "2024 - 2025",
        title: "Mid Backend Developer",
        company: "VPM Solutions (Remote)",
        description:
            "Designed and maintained advanced metric systems. Developed scalable backend systems using Node.js and AWS. Created and contributed to the development of an AI interview system.",
    },
    {
        year: "2022 - 2024",
        title: "Full Stack Developer & Team Lead",
        company: "Minnek Digital Agency (Santiago, DR)",
        description:
            'Built robust e-commerce solutions using Node.js and NestJS. Built a BigCommerce App for over 9k customers. Led a team of 4 developers in creating the "Conectando" application.',
    },
    {
        year: "2023 - Present",
        title: "Founder and Lead Developer",
        company: "ZitDevs (Santiago, DR)",
        description:
            "Launched a development company focused on delivering impactful technological solutions. Led a team of developers in creating innovative products and services. Spearheaded the development of Qounta.",
    },
    {
        year: "2022 - 2023",
        title: "BigCommerce Engineer | Full Stack Engineer",
        company: "Your Store Wizards",
        description:
            "Worked as a BigCommerce Engineer and Full Stack Engineer.",
    },
    {
        year: "2018 - 2022",
        title: "Software Developer",
        company: "Freelancer (Santiago, DR)",
        description:
            "Developed various software solutions including landing pages and basic desktop applications. Worked with clients to gather requirements and deliver customized software solutions.",
    },
];

const education = [
    {
        year: "2026 (Expected)",
        title: "Bachelor’s Degree in Software Engineering",
        company: "Universidad Abierta para Adultos (UAPA)",
        description:
            "Relevant Coursework: Software Development, Database Management, Web Technologies",
    },
    {
        year: "2022",
        title: "Effective Communication for Leads",
        company: "Platzi",
        description: "",
    },
    {
        year: "2021",
        title: "Certificate in Introduction to Programming",
        company: "Instituto Tecnológico de Las Américas (ITLA)",
        description: "",
    },
    {
        year: "2020",
        title: "Diploma in Network Technician",
        company: "Politécnico Hermana Josefina Serrano",
        description: "",
    },
    {
        year: "2016 - 2021",
        title: "English",
        company: "Instituto Utesiano de Idiomas (IUI)",
        description: "",
    },
];

const skills = [
    "Node.js (+9y)",
    "TypeScript (+7y)",
    "React (+6y)",
    "Next.js (+5y)",
    "AWS (+4y)",
    "Vue (+3y)",
    "NestJS",
    "Express JS",
    "Electron",
    "Tailwind CSS",
    "PostgreSQL",
    "MySQL",
    "SQLite",
    "MongoDB",
    "BigCommerce",
    "Docker",
    "CI/CD",
    "Microservices",
    "Go",
];

const languagesList = ["Spanish (Native)", "English (Fluent)"];
---

<Layout title={`Portfolio | ${t("nav.about")}`}>
    <Section maxWidth="4xl" first>
        <PageHeader
            title={t("about.title")}
            badgeText={t("about.badge")}
            badgeColor="blue"
        >
            <svg
                slot="icon"
                class="animate-spin h-4 w-4"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
            >
                <circle
                    class="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    stroke-width="4"></circle>
                <path
                    class="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                ></path>
            </svg>
        </PageHeader>

        <div class="prose prose-lg text-gray-500 dark:text-gray-400 mb-12 sm:mb-16">
            <blockquote
                class="text-lg sm:text-xl font-medium text-gray-900 dark:text-white italic mb-6 sm:mb-8 border-l-4 border-gray-900 dark:border-gray-100 pl-4"
            >
                "{t("about.quote")}"
            </blockquote>
            <p>
                {t("about.p1")}
            </p>
            <p>
                {t("about.p2")}
            </p>
            <p>
                {t("about.p3")}
            </p>
        </div>

        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-6 sm:mb-8">
            {t("about.experience")}
        </h2>
        <div class="mb-16 sm:mb-20">
            {experience.map((item) => <TimelineItem {...item} />)}
        </div>

        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-6 sm:mb-8">
            {t("about.education")}
        </h2>
        <div class="mb-16 sm:mb-20">
            {education.map((item) => <TimelineItem {...item} />)}
        </div>

        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-6 sm:mb-8">
            {t("about.skills")}
        </h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3 sm:gap-4 mb-16 sm:mb-20">
            {skills.map((skill) => <SkillCard name={skill} />)}
        </div>

        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-6 sm:mb-8">
            {t("about.languages")}
        </h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3 sm:gap-4">
            {languagesList.map((language) => <SkillCard name={language} />)}
        </div>
    </Section>
</Layout>
