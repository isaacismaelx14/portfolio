---
import Layout from "../../layouts/Layout.astro";
import Section from "../Section.astro";
import PageHeader from "../PageHeader.astro";
import FormInput from "../FormInput.astro";
import FormTextarea from "../FormTextarea.astro";
import { useTranslations } from "../../i18n/utils";
import { getPageDescription } from "../../data/about";
import type { Lang } from "../../types";
import CheckFilledIcon from "../icons/CheckFilledIcon.astro";
import MailIcon from "../icons/MailIcon.astro";
import GitHubIcon from "../icons/GitHubIcon.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
import XCircleIcon from "../icons/XCircleIcon.astro";

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const pageDescription = getPageDescription("contact", lang);
---

<Layout
    title={`${t("contact.title")} | Isaac Martinez`}
    description={pageDescription}
>
    <Section maxWidth="7xl" first>
        <div
            class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-24 items-start"
        >
            <!-- Left Column: Contact Info -->
            <div>
                <PageHeader
                    title={t("contact.title")}
                    badgeText={t("contact.badge")}
                    badgeColor="green"
                >
                    <CheckFilledIcon slot="icon" class="h-4 w-4" />
                </PageHeader>

                <p
                    class="text-lg sm:text-xl text-gray-500 dark:text-gray-400 mb-8 sm:mb-12 mt-4 sm:mt-6 leading-relaxed"
                >
                    {t("contact.desc")}
                </p>

                <div class="space-y-8">
                    <a
                        href="mailto:me@isaacmartinez.dev"
                        class="flex items-center group p-4 -mx-4 rounded-2xl hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors"
                    >
                        <div
                            class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-xl bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400 group-hover:scale-110 transition-transform duration-300"
                        >
                            <MailIcon class="h-6 w-6" />
                        </div>
                        <div class="ml-4">
                            <p
                                class="text-sm font-medium text-gray-500 dark:text-gray-400"
                            >
                                {t("contact.info.email")}
                            </p>
                            <p
                                class="text-lg font-semibold text-gray-900 dark:text-white"
                            >
                                me@isaacmartinez.dev
                            </p>
                        </div>
                    </a>

                    <div
                        class="pt-8 border-t border-gray-200 dark:border-gray-800"
                    >
                        <h3
                            class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-4"
                        >
                            {t("contact.info.connectWithMe")}
                        </h3>
                        <div class="flex space-x-4">
                            <a
                                href="https://github.com/isaacismaelx14"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400 hover:bg-gray-900 hover:text-white dark:hover:bg-white dark:hover:text-gray-900 transition-all duration-300"
                            >
                                <span class="sr-only">GitHub</span>
                                <GitHubIcon class="h-5 w-5" />
                            </a>
                            <a
                                href="https://www.linkedin.com/in/isaacismaelx14/"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400 hover:bg-blue-600 hover:text-white dark:hover:bg-blue-500 dark:hover:text-white transition-all duration-300"
                            >
                                <span class="sr-only">LinkedIn</span>
                                <LinkedInIcon class="h-5 w-5" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Form -->
            <div
                class="bg-white dark:bg-gray-900 rounded-2xl sm:rounded-3xl p-6 sm:p-8 shadow-xl border border-gray-100 dark:border-gray-800"
            >
                <form class="space-y-6" id="contact-form">
                    <FormInput
                        label={t("contact.form.name")}
                        name="name"
                        placeholder={t("contact.form.namePlaceholder")}
                        required
                    />
                    <FormInput
                        label={t("contact.form.email")}
                        name="email"
                        type="email"
                        placeholder={t("contact.form.emailPlaceholder")}
                        required
                    />
                    <FormTextarea
                        label={t("contact.form.message")}
                        name="message"
                        placeholder={t("contact.form.messagePlaceholder")}
                        required
                    />

                    <div>
                        <button
                            type="submit"
                            id="submit-button"
                            class="w-full flex justify-center py-4 px-6 border border-transparent rounded-xl shadow-sm text-base font-medium text-white bg-gray-900 dark:bg-white dark:text-gray-900 hover:bg-gray-800 dark:hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 dark:focus:ring-gray-400 transition-all duration-200 transform hover:-translate-y-0.5 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none"
                        >
                            {t("contact.form.submit")}
                        </button>
                    </div>
                </form>

                <div id="success-message" class="hidden mt-6">
                    <div
                        class="bg-gray-900 dark:bg-black rounded-xl p-6 font-mono text-sm shadow-2xl border border-gray-800 transform transition-all duration-500 ease-out translate-y-2 opacity-0"
                        id="terminal-window"
                    >
                        <!-- Window Controls -->
                        <div class="flex gap-2 mb-4">
                            <div class="w-3 h-3 rounded-full bg-red-500"></div>
                            <div class="w-3 h-3 rounded-full bg-yellow-500">
                            </div>
                            <div class="w-3 h-3 rounded-full bg-green-500">
                            </div>
                        </div>
                        <!-- Terminal Content -->
                        <div class="space-y-3">
                            <div class="flex items-center gap-2 text-gray-400">
                                <span class="text-green-400">➜</span>
                                <span class="text-blue-400">~</span>
                                <span>exec send_message --priority=high</span>
                            </div>
                            <div class="text-green-400 flex items-center gap-2">
                                <span>✔</span>
                                <span class="font-semibold"
                                    >{t("contact.form.success")}</span
                                >
                            </div>
                            <div
                                class="text-gray-500 pl-5 text-xs space-y-1 border-l border-gray-800 ml-1"
                            >
                                <p>>> Status: 200 OK</p>
                                <p>>> Delivered: true</p>
                                <p>
                                    >> Time: {new Date().toLocaleTimeString()}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div
                    id="error-message"
                    class="hidden mt-6 p-4 bg-red-50 dark:bg-red-900/20 text-red-800 dark:text-red-300 rounded-xl border border-red-200 dark:border-red-800 flex items-center"
                >
                    <XCircleIcon class="h-5 w-5 mr-3" />
                    <span id="error-text"
                        >Something went wrong. Please try again later.</span
                    >
                </div>
            </div>
        </div>
    </Section>
</Layout>

<script
    is:inline
    src={`https://www.google.com/recaptcha/api.js?render=${import.meta.env.PUBLIC_RECAPTCHA_SITE_KEY}`}
></script>

<script define:vars={{ siteKey: import.meta.env.PUBLIC_RECAPTCHA_SITE_KEY }}>
    const form = document.getElementById("contact-form");
    const successMessage = document.getElementById("success-message");
    const errorMessage = document.getElementById("error-message");
    const submitButton = document.getElementById("submit-button");

    if (form && successMessage && errorMessage && submitButton) {
        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            submitButton.disabled = true;
            submitButton.textContent = "Sending...";
            errorMessage.classList.add("hidden");

            try {
                // @ts-ignore
                const recaptchaToken = await grecaptcha.execute(siteKey, {
                    action: "submit",
                });

                const formData = new FormData(form);
                const data = {
                    name: formData.get("name"),
                    email: formData.get("email"),
                    message: formData.get("message"),
                    recaptchaToken,
                };

                const response = await fetch("/api/send-email", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(data),
                });

                if (response.ok) {
                    form.style.display = "none";
                    successMessage.classList.remove("hidden");
                    // Trigger animation
                    setTimeout(() => {
                        const terminal =
                            document.getElementById("terminal-window");
                        if (terminal) {
                            terminal.classList.remove(
                                "translate-y-2",
                                "opacity-0",
                            );
                        }
                    }, 50);
                } else {
                    const result = await response.json();
                    const errorText = document.getElementById("error-text");
                    if (errorText)
                        errorText.textContent =
                            result.message || "Something went wrong.";
                    errorMessage.classList.remove("hidden");
                    submitButton.disabled = false;
                    submitButton.textContent = "Send Message";
                }
            } catch (error) {
                console.error("Error:", error);
                errorMessage.classList.remove("hidden");
                submitButton.disabled = false;
                submitButton.textContent = "Send Message";
            }
        });
    }
</script>
