---
import Layout from "../../layouts/Layout.astro";
import Section from "../Section.astro";
import PageHeader from "../PageHeader.astro";
import FormInput from "../FormInput.astro";
import FormTextarea from "../FormTextarea.astro";
import { useTranslations } from "../../i18n/utils";

interface Props {
    lang: "en" | "es";
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<Layout title={`Portfolio | ${t("nav.contact")}`}>
    <Section maxWidth="7xl">
        <div
            class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24 items-start"
        >
            <!-- Left Column: Contact Info -->
            <div>
                <PageHeader
                    title={t("contact.title")}
                    badgeText={t("contact.badge")}
                    badgeColor="green"
                >
                    <svg
                        slot="icon"
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                            clip-rule="evenodd"></path>
                    </svg>
                </PageHeader>

                <p
                    class="text-xl text-gray-500 dark:text-gray-400 mb-12 mt-6 leading-relaxed"
                >
                    {t("contact.desc")}
                </p>

                <div class="space-y-8">
                    <a
                        href="mailto:me@isaacmartinez.dev"
                        class="flex items-center group p-4 -mx-4 rounded-2xl hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors"
                    >
                        <div
                            class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-xl bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400 group-hover:scale-110 transition-transform duration-300"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <p
                                class="text-sm font-medium text-gray-500 dark:text-gray-400"
                            >
                                {t("contact.info.email")}
                            </p>
                            <p
                                class="text-lg font-semibold text-gray-900 dark:text-white"
                            >
                                me@isaacmartinez.dev
                            </p>
                        </div>
                    </a>

                    <div
                        class="pt-8 border-t border-gray-200 dark:border-gray-800"
                    >
                        <h3
                            class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-4"
                        >
                            Connect with me
                        </h3>
                        <div class="flex space-x-4">
                            <a
                                href="https://github.com/isaacismaelx14"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400 hover:bg-gray-900 hover:text-white dark:hover:bg-white dark:hover:text-gray-900 transition-all duration-300"
                            >
                                <span class="sr-only">GitHub</span>
                                <svg
                                    class="h-5 w-5"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                    aria-hidden="true"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </a>
                            <a
                                href="https://www.linkedin.com/in/isaacismaelx14/"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400 hover:bg-blue-600 hover:text-white dark:hover:bg-blue-500 dark:hover:text-white transition-all duration-300"
                            >
                                <span class="sr-only">LinkedIn</span>
                                <svg
                                    class="h-5 w-5"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                    aria-hidden="true"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Form -->
            <div
                class="bg-white dark:bg-gray-900 rounded-3xl p-8 shadow-xl border border-gray-100 dark:border-gray-800"
            >
                <form class="space-y-6" id="contact-form">
                    <FormInput
                        label={t("contact.form.name")}
                        name="name"
                        placeholder={t("contact.form.namePlaceholder")}
                        required
                    />
                    <FormInput
                        label={t("contact.form.email")}
                        name="email"
                        type="email"
                        placeholder={t("contact.form.emailPlaceholder")}
                        required
                    />
                    <FormTextarea
                        label={t("contact.form.message")}
                        name="message"
                        placeholder={t("contact.form.messagePlaceholder")}
                        required
                    />

                    <div>
                        <button
                            type="submit"
                            id="submit-button"
                            class="w-full flex justify-center py-4 px-6 border border-transparent rounded-xl shadow-sm text-base font-medium text-white bg-gray-900 dark:bg-white dark:text-gray-900 hover:bg-gray-800 dark:hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 dark:focus:ring-gray-400 transition-all duration-200 transform hover:-translate-y-0.5 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none"
                        >
                            {t("contact.form.submit")}
                        </button>
                    </div>
                </form>

                <div
                    id="success-message"
                    class="hidden mt-6 p-4 bg-green-50 dark:bg-green-900/20 text-green-800 dark:text-green-300 rounded-xl border border-green-200 dark:border-green-800 flex items-center"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5 mr-3"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd"></path>
                    </svg>
                    {t("contact.form.success")}
                </div>
                <div
                    id="error-message"
                    class="hidden mt-6 p-4 bg-red-50 dark:bg-red-900/20 text-red-800 dark:text-red-300 rounded-xl border border-red-200 dark:border-red-800 flex items-center"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5 mr-3"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                            clip-rule="evenodd"></path>
                    </svg>
                    <span id="error-text"
                        >Something went wrong. Please try again later.</span
                    >
                </div>
            </div>
        </div>
    </Section>
</Layout>

<script
    is:inline
    src={`https://www.google.com/recaptcha/api.js?render=${import.meta.env.PUBLIC_RECAPTCHA_SITE_KEY}`}
></script>

<script define:vars={{ siteKey: import.meta.env.PUBLIC_RECAPTCHA_SITE_KEY }}>
    const form = document.getElementById("contact-form");
    const successMessage = document.getElementById("success-message");
    const errorMessage = document.getElementById("error-message");
    const submitButton = document.getElementById("submit-button");

    if (form && successMessage && errorMessage && submitButton) {
        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            submitButton.disabled = true;
            submitButton.textContent = "Sending...";
            errorMessage.classList.add("hidden");

            try {
                // @ts-ignore
                const recaptchaToken = await grecaptcha.execute(siteKey, {
                    action: "submit",
                });

                const formData = new FormData(form);
                const data = {
                    name: formData.get("name"),
                    email: formData.get("email"),
                    message: formData.get("message"),
                    recaptchaToken,
                };

                const response = await fetch("/api/send-email", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(data),
                });

                if (response.ok) {
                    form.style.display = "none";
                    successMessage.classList.remove("hidden");
                } else {
                    const result = await response.json();
                    const errorText = document.getElementById("error-text");
                    if (errorText)
                        errorText.textContent =
                            result.message || "Something went wrong.";
                    errorMessage.classList.remove("hidden");
                    submitButton.disabled = false;
                    submitButton.textContent = "Send Message";
                }
            } catch (error) {
                console.error("Error:", error);
                errorMessage.classList.remove("hidden");
                submitButton.disabled = false;
                submitButton.textContent = "Send Message";
            }
        });
    }
</script>
