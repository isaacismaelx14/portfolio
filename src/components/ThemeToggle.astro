<button
    type="button"
    class="theme-toggle text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center justify-center transition-colors"
    aria-label="Toggle Dark Mode"
>
    <svg
        class="theme-toggle-dark-icon hidden w-5 h-5"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
    >
        <path
            d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
        ></path>
    </svg>
    <svg
        class="theme-toggle-light-icon hidden w-5 h-5"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
    >
        <path
            d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
            fill-rule="evenodd"
            clip-rule="evenodd"></path>
    </svg>
</button>

<script>
    function initThemeToggles() {
        const themeToggleBtns = document.querySelectorAll(".theme-toggle");

        // Function to get the current effective theme
        function getTheme() {
            if (localStorage.getItem("color-theme")) {
                return localStorage.getItem("color-theme");
            }
            if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
                return "dark";
            }
            return "light";
        }

        // Function to set the theme and update UI
        function setTheme(theme) {
            // Update LocalStorage
            localStorage.setItem("color-theme", theme);

            // Update DOM
            if (theme === "dark") {
                document.documentElement.classList.add("dark");
            } else {
                document.documentElement.classList.remove("dark");
            }

            // Update All Toggles
            themeToggleBtns.forEach((btn) => {
                const darkIcon = btn.querySelector(".theme-toggle-dark-icon");
                const lightIcon = btn.querySelector(".theme-toggle-light-icon");

                if (theme === "dark") {
                    // If dark, show sun (light icon) to switch to light
                    lightIcon?.classList.remove("hidden");
                    darkIcon?.classList.add("hidden");
                } else {
                    // If light, show moon (dark icon) to switch to dark
                    darkIcon?.classList.remove("hidden");
                    lightIcon?.classList.add("hidden");
                }
            });
        }

        // Initialize state based on current theme
        const currentTheme = getTheme();

        // Ensure DOM matches current theme
        if (currentTheme === "dark") {
            document.documentElement.classList.add("dark");
        } else {
            document.documentElement.classList.remove("dark");
        }

        // Update initial UI and add listeners
        themeToggleBtns.forEach((btn) => {
            const darkIcon = btn.querySelector(".theme-toggle-dark-icon");
            const lightIcon = btn.querySelector(".theme-toggle-light-icon");

            if (currentTheme === "dark") {
                lightIcon?.classList.remove("hidden");
                darkIcon?.classList.add("hidden");
            } else {
                darkIcon?.classList.remove("hidden");
                lightIcon?.classList.add("hidden");
            }

            // Add click listener
            // Note: With astro:page-load, elements are new on navigation, so no duplicate listeners.
            btn.addEventListener("click", (e) => {
                e.preventDefault();
                e.stopPropagation();

                const activeTheme = getTheme();
                const newTheme = activeTheme === "dark" ? "light" : "dark";
                setTheme(newTheme);
            });
        });
    }

    // Run on every page load (initial + navigation)
    document.addEventListener("astro:page-load", initThemeToggles);
</script>
