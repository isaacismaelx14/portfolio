---
interface Props {
  name: string;
  role: string;
  description: string;
}

const { name, role, description } = Astro.props;
---

<section class="py-20 sm:py-32 flex flex-col justify-center items-start max-w-3xl">
  <h1 class="text-4xl sm:text-6xl font-bold tracking-tight text-gray-900 mb-6">
    Hi, I'm {name}.
  </h1>
  <p class="text-xl sm:text-2xl text-gray-600 mb-8 font-medium">
    {role}
  </p>
  <p class="text-lg text-gray-500 leading-relaxed max-w-2xl mb-10">
    {description}
  </p>
  <div class="flex gap-4">
    <a href="/projects" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-gray-900 hover:bg-gray-800 transition-all hover:scale-[1.02] shadow-sm">
      View Projects
    </a>
    <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 transition-all hover:scale-[1.02] shadow-sm">
      Contact Me
    </a>
  </div>
</section>
