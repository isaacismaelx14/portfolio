---
import "@fontsource/caveat";

interface Props {
  name: string;
  role: string;
  description: string;
}

const { name, role, description } = Astro.props;
---

<section class="py-20 sm:py-32 max-w-7xl mx-auto">
  <div class="grid lg:grid-cols-2 gap-12 items-center">
    <!-- Left Column: Intro & Buttons -->
    <div class="flex flex-col justify-center items-start relative">
      <h1
        class="text-4xl sm:text-6xl font-bold tracking-tight text-gray-900 mb-6"
      >
        Hi, I'm {name}.
      </h1>
      <p class="text-xl sm:text-2xl text-gray-600 mb-8 font-medium">
        {role}
      </p>
      <p class="text-lg text-gray-500 leading-relaxed max-w-lg mb-10">
        {description}
      </p>
      <div class="flex flex-wrap gap-4">
        <a
          href="/projects"
          class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-gray-900 hover:bg-gray-800 transition-all hover:scale-[1.02] shadow-sm"
        >
          View Projects
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 transition-all hover:scale-[1.02] shadow-sm"
        >
          Contact Me
        </a>
      </div>
    </div>

    <!-- Right Column: Interactive About Me Card -->
    <div class="hidden lg:flex justify-center items-center relative">
      <!-- Decorative Elements -->
      <div
        class="absolute top-0 right-10 w-64 h-64 bg-gray-100 rounded-full mix-blend-multiply filter blur-3xl opacity-70 animate-blob"
      >
      </div>
      <div
        class="absolute -bottom-8 left-20 w-64 h-64 bg-gray-200 rounded-full mix-blend-multiply filter blur-3xl opacity-70 animate-blob animation-delay-2000"
      >
      </div>

      <!-- The Card -->
      <a
        href="/about"
        class="relative group cursor-pointer transform hover:-translate-y-2 transition-all duration-300"
      >
        <div
          class="relative bg-white rounded-xl shadow-2xl border border-gray-200 max-w-sm overflow-hidden group-hover:shadow-3xl transition-shadow duration-300"
        >
          <!-- Window Header -->
          <div
            class="bg-gray-100 px-4 py-3 border-b border-gray-200 flex items-center justify-between"
          >
            <div class="flex gap-2">
              <div class="w-3 h-3 rounded-full bg-red-400"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
              <div class="w-3 h-3 rounded-full bg-green-400"></div>
            </div>
            <div class="text-xs text-gray-500 font-mono">isaac.ts</div>
            <div class="w-12"></div>
            <!-- Spacer for centering -->
          </div>

          <!-- Code Content -->
          <div
            class="p-6 bg-white font-mono text-sm leading-relaxed border-b border-gray-100"
          >
            <div class="flex">
              <span class="text-purple-600 mr-2">const</span>
              <span class="text-blue-600 mr-2">me</span>
              <span class="text-gray-600">=</span>
              <span class="text-purple-600 mr-2">new</span>
              <span class="text-yellow-600">Developer</span>
              <span class="text-gray-900">({"{"}</span>
            </div>
            <div class="pl-4">
              <span class="text-gray-500">name:</span>
              <span class="text-green-600">"{name}"</span>,
            </div>
            <div class="pl-4">
              <span class="text-gray-500">role:</span>
              <span class="text-green-600">"Architect"</span>,
            </div>
            <div class="pl-4">
              <span class="text-gray-500">focus:</span>
              <span class="text-green-600">"AI Solutions"</span>
            </div>
            <div class="text-gray-900">{"}"});</div>

            <div class="mt-6 flex items-center gap-2">
              <span class="text-gray-400">// Ready to collaborate?</span>
            </div>

            <div class="mt-4">
              <div class="flex items-center gap-2">
                <span class="text-blue-600">me</span>
                <span class="text-gray-600">.</span>
                <span class="text-yellow-600">contact</span>
                <span class="text-gray-900">()</span>
                <span class="text-gray-600">;</span>
              </div>
            </div>
          </div>

          <!-- Terminal / Action Area -->
          <div class="bg-gray-50 px-4 py-3 flex justify-between items-center">
            <div class="text-xs text-gray-400 font-mono flex gap-2">
              <span>TERMINAL</span>
              <span class="text-gray-300">|</span>
              <span>OUTPUT</span>
            </div>
            <button
              id="run-btn"
              class="flex items-center gap-2 bg-green-100 hover:bg-green-200 text-green-700 px-4 py-1.5 rounded-md transition-all hover:scale-105 active:scale-95"
              style="view-transition-name: run-btn;"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z"
                  clip-rule="evenodd"></path>
              </svg>
              <span class="font-semibold text-xs">Run</span>
            </button>
          </div>
        </div>
      </a>
    </div>
  </div>
</section>

<script>
  import { navigate } from "astro:transitions/client";

  const runBtn = document.getElementById("run-btn");

  if (runBtn) {
    runBtn.addEventListener("click", async (e) => {
      e.preventDefault();
      e.stopPropagation();

      // Change state to "Running"
      runBtn.innerHTML = `
        <svg class="animate-spin h-4 w-4 text-blue-700" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span class="font-semibold text-xs text-blue-700">Running...</span>
      `;
      runBtn.classList.remove(
        "bg-green-100",
        "text-green-700",
        "hover:bg-green-200",
      );
      runBtn.classList.add("bg-blue-100", "text-blue-700");

      // Wait a bit to show animation
      await new Promise((resolve) => setTimeout(resolve, 800));

      // Navigate
      navigate("/about");
    });
  }
</script>

<!-- Status Bar -->
<div
  class="bg-gray-50 px-4 py-2 border-t border-gray-100 flex justify-between text-[10px] text-gray-500 font-mono"
>
  <div class="flex gap-4">
    <span>main*</span>
    <span>Ln 12, Col 45</span>
  </div>
  <div class="flex gap-4">
    <span>UTF-8</span>
    <span>TypeScript</span>
  </div>
</div>

<style>
  @keyframes bounce-slow {
    0%,
    100% {
      transform: translateY(-5%);
      animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
    }
    50% {
      transform: translateY(0);
      animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
    }
  }
  .animate-bounce-slow {
    animation: bounce-slow 3s infinite;
  }
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }
  .animate-blob {
    animation: blob 7s infinite;
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>
