---
interface Props {
    title: string;
    badgeText?: string;
    badgeColor?: "blue" | "green" | "yellow" | "red" | "purple";
}

const { title, badgeText, badgeColor = "blue" } = Astro.props;

const colorClasses = {
    blue: "bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300",
    green: "bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300",
    yellow: "bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-300",
    red: "bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300",
    purple: "bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300",
};
---

<h1
    class="text-4xl font-bold text-gray-900 dark:text-white mb-8 flex items-center justify-between"
>
    {title}
    {
        badgeText && (
            <div
                class:list={[
                    "hidden sm:flex items-center gap-2 px-3 py-1.5 rounded-md",
                    colorClasses[badgeColor],
                ]}
                style="view-transition-name: run-btn;"
            >
                <slot name="icon" />
                <span class="font-semibold text-xs">{badgeText}</span>
            </div>
        )
    }
</h1>
