---
import { languages } from "../i18n/utils";
import { getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
---

<ul class="flex gap-2">
    {
        Object.entries(languages).map(([label, name]) => (
            <li>
                <a
                    href={`/${label === "en" ? "" : label}`}
                    class={`text-sm font-medium transition-colors ${lang === label ? "text-primary" : "text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100"}`}
                >
                    {name}
                </a>
            </li>
        ))
    }
</ul>
