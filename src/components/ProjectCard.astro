---
interface Props {
  title: string;
  description: string;
  impact?: string;
  tags: string[];
  link: string;
  image?: string;
}

const { title, description, impact, tags, link, image } = Astro.props;
---

<a
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  class="group block h-full bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-xl transition-all hover:-translate-y-1 overflow-hidden flex flex-col"
>
  <!-- Window Header -->
  <div
    class="bg-gray-50 dark:bg-gray-900 px-3 py-2 border-b border-gray-100 dark:border-gray-700 flex items-center gap-1.5"
  >
    <div
      class="w-2.5 h-2.5 rounded-full bg-red-400 group-hover:bg-red-500 transition-colors"
    >
    </div>
    <div
      class="w-2.5 h-2.5 rounded-full bg-yellow-400 group-hover:bg-yellow-500 transition-colors"
    >
    </div>
    <div
      class="w-2.5 h-2.5 rounded-full bg-green-400 group-hover:bg-green-500 transition-colors"
    >
    </div>
  </div>

  {
    image && (
      <div class="aspect-video w-full overflow-hidden bg-gray-100 dark:bg-gray-700 border-b border-gray-100 dark:border-gray-700 relative">
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
          <span class="text-white font-medium text-sm">
            View Project &rarr;
          </span>
        </div>
      </div>
    )
  }
  <div class="p-6 flex-grow flex flex-col">
    <h3
      class="text-xl font-bold text-gray-900 dark:text-white mb-1 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
    >
      {title}
    </h3>

    {
      impact && (
        <p class="text-xs font-bold text-blue-600 dark:text-blue-400 uppercase tracking-wide mb-3">
          {impact}
        </p>
      )
    }

    <p
      class="text-gray-500 dark:text-gray-400 mb-6 text-sm leading-relaxed line-clamp-3 flex-grow"
    >
      {description}
    </p>

    <div
      class="flex flex-wrap gap-2 mt-auto pt-4 border-t border-gray-50 dark:border-gray-700"
    >
      {
        tags.map((tag) => (
          <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-mono border border-gray-200 dark:border-gray-600">
            {tag}
          </span>
        ))
      }
    </div>
  </div>
</a>
