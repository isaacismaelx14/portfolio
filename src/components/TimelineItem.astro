---
interface Props {
    year: string;
    title: string;
    company: string;
    description: string;
}

const { year, title, company, description } = Astro.props;
---

<div class="relative pl-8 sm:pl-32 py-6 group">
    <!-- Line -->
    <div
        class="flex flex-col sm:flex-row items-start mb-1 group-last:before:hidden before:absolute before:left-2 sm:before:left-0 before:h-full before:px-px before:bg-slate-200 dark:before:bg-gray-700 sm:before:ml-[6.5rem] before:self-start before:-translate-x-1/2 before:translate-y-3 after:absolute after:left-2 sm:after:left-0 after:w-2 after:h-2 after:bg-gray-600 dark:after:bg-gray-400 after:border-4 after:box-content after:border-slate-50 dark:after:border-gray-900 after:rounded-full sm:after:ml-[6.5rem] after:-translate-x-1/2 after:translate-y-1.5"
    >
        <time
            class="sm:absolute left-0 translate-y-0.5 inline-flex items-center justify-center text-xs font-semibold uppercase w-20 h-6 mb-3 sm:mb-0 text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-gray-800 rounded-full"
        >
            {year}
        </time>
        <div class="text-xl font-bold text-gray-900 dark:text-white">
            {title}
        </div>
    </div>
    <!-- Content -->
    <div class="text-slate-500 dark:text-gray-400">{company}</div>
    <div class="text-slate-500 dark:text-gray-400 mt-2 text-sm leading-relaxed">
        {description}
    </div>
</div>
