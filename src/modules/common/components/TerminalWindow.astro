---
import TerminalHeader from "./TerminalHeader.astro";
import TerminalIcon from "./icons/TerminalIcon.astro";

interface Props {
    filename?: string;
    showIcon?: boolean;
    minHeight?: string;
    class?: string;
}

const {
    filename = "isaac.sh",
    showIcon = false,
    minHeight,
    class: className = "",
} = Astro.props;
---

<div
    class:list={[
        "bg-white dark:bg-gray-800 rounded-xl shadow-xl border border-gray-200 dark:border-gray-700 overflow-hidden",
        className,
    ]}
>
    <div
        class="bg-gray-100 dark:bg-gray-900 px-4 py-3 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between"
    >
        <TerminalHeader />
        <div
            class="text-xs text-gray-500 dark:text-gray-400 font-mono flex items-center gap-2"
        >
            {showIcon && <TerminalIcon class="h-3 w-3" />}
            {filename}
        </div>
        <div class="w-12"></div>
    </div>
    <div
        class="bg-white dark:bg-gray-800"
        style={minHeight ? `min-height: ${minHeight}` : undefined}
    >
        <slot />
    </div>
</div>
