---
import {
    languages,
    flags,
    getLangFromUrl,
    useTranslations,
    getLocalizedPath,
    useTranslatedPath,
} from "../../../i18n/utils";
import { APP_VERSION } from "../../../data/changelog";
import SunIcon from "./icons/SunIcon.astro";
import MoonIcon from "./icons/MoonIcon.astro";

interface Props {
    variant?: "desktop" | "mobile";
    showHeader?: boolean;
    showFooter?: boolean;
}

const {
    variant = "desktop",
    showHeader = true,
    showFooter = true,
} = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
const currentPath = Astro.url.pathname;

const isDesktop = variant === "desktop";
const themeButtonClass = isDesktop
    ? "theme-select-btn"
    : "mobile-theme-select-btn";
---

{
    showHeader && (
        <div class="px-4 py-3 border-b border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-800/50 rounded-t-xl">
            <p class="text-xs font-mono font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                {t("settings.title")}
            </p>
        </div>
    )
}

<div class={`p-${isDesktop ? "2" : "4"} space-y-${isDesktop ? "1" : "4"}`}>
    <!-- Theme Section -->
    <div class={isDesktop ? "px-2 py-2" : ""}>
        <p
            class="text-xs font-medium text-gray-500 dark:text-gray-400 mb-2 uppercase tracking-wide font-mono"
        >
            {t("settings.appearance")}
        </p>
        <div class="flex bg-gray-100 dark:bg-gray-800 rounded-lg p-1">
            <button
                type="button"
                class={`${themeButtonClass} flex-1 flex items-center justify-center gap-2 px-3 py-${isDesktop ? "1.5" : "2"} rounded-md text-sm font-medium transition-all`}
                data-theme="light"
                role={isDesktop ? "menuitem" : undefined}
            >
                <SunIcon class="w-4 h-4" />
                {t("settings.light")}
            </button>
            <button
                type="button"
                class={`${themeButtonClass} flex-1 flex items-center justify-center gap-2 px-3 py-${isDesktop ? "1.5" : "2"} rounded-md text-sm font-medium transition-all`}
                data-theme="dark"
                role={isDesktop ? "menuitem" : undefined}
            >
                <MoonIcon class="w-4 h-4" />
                {t("settings.dark")}
            </button>
        </div>
    </div>

    <div
        class={`h-px bg-gray-200 dark:bg-gray-${isDesktop ? "800" : "700"} ${isDesktop ? "mx-2 my-1" : ""}`}
    >
    </div>

    <!-- Language Section -->
    <div class={isDesktop ? "px-2 py-2" : ""}>
        <p
            class="text-xs font-medium text-gray-500 dark:text-gray-400 mb-2 uppercase tracking-wide font-mono"
        >
            {t("settings.language")}
        </p>
        <div class="space-y-1">
            {
                Object.entries(languages).map(([label, name]) => (
                    <a
                        href={getLocalizedPath(currentPath, label)}
                        class={`flex items-center justify-between px-3 py-2 rounded-md text-sm font-medium transition-colors ${
                            lang === label
                                ? "bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300 border border-blue-200 dark:border-blue-800"
                                : "text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800"
                        }`}
                        onclick={`localStorage.setItem('preferred-lang', '${label}')`}
                        role={isDesktop ? "menuitem" : undefined}
                    >
                        <span class="flex items-center gap-2">
                            <span class="text-lg">{flags[label]}</span>
                            <span>{name}</span>
                        </span>
                        {lang === label && (
                            <div class="w-2 h-2 rounded-full bg-blue-500" />
                        )}
                    </a>
                ))
            }
        </div>
    </div>
</div>

<!-- Sudo Mode Section (Hidden by default) -->
<div id="sudo-mode-section" class={`hidden ${isDesktop ? "px-2 py-2" : ""}`}>
    <div class={`h-px bg-red-500/20 mb-2 ${isDesktop ? "mx-2" : ""}`}></div>
    <p
        class="text-xs font-medium text-red-500 mb-2 uppercase tracking-wide font-mono flex items-center gap-2"
    >
        <span>‚ö†Ô∏è Sudo Mode</span>
    </p>
    <div class="space-y-1">
        <button
            type="button"
            id="goat-mode-toggle"
            class={`w-full flex items-center justify-between px-3 py-2 rounded-md text-sm font-medium transition-colors text-red-400 hover:bg-red-500/10 border border-red-500/20`}
            role={isDesktop ? "menuitem" : undefined}
        >
            <span class="flex items-center gap-2">
                <span>üêê GOAT Mode</span>
            </span>
            <span id="goat-mode-status" class="text-xs opacity-50">OFF</span>
        </button>
        <button
            type="button"
            id="debug-mode-toggle"
            class={`w-full flex items-center justify-between px-3 py-2 rounded-md text-sm font-medium transition-colors text-blue-400 hover:bg-blue-500/10 border border-blue-500/20`}
            role={isDesktop ? "menuitem" : undefined}
        >
            <span class="flex items-center gap-2">
                <span>üîç Debug Mode</span>
            </span>
            <span id="debug-mode-status" class="text-xs opacity-50">OFF</span>
        </button>
        <button
            type="button"
            id="matrix-theme-toggle"
            class={`w-full flex items-center justify-between px-3 py-2 rounded-md text-sm font-medium transition-colors text-green-400 hover:bg-green-500/10 border border-green-500/20`}
            role={isDesktop ? "menuitem" : undefined}
        >
            <span class="flex items-center gap-2">
                <span>üíä Matrix Theme</span>
            </span>
            <span id="matrix-theme-status" class="text-xs opacity-50">OFF</span>
        </button>
    </div>
</div>

<script>
    import { SudoService } from "../../../scripts/sudo";

    // Handle Sudo Mode UI
    function initSudoMode() {
        const section = document.getElementById("sudo-mode-section");
        const goatBtn = document.getElementById("goat-mode-toggle");
        const goatStatus = document.getElementById("goat-mode-status");
        const debugBtn = document.getElementById("debug-mode-toggle");
        const debugStatus = document.getElementById("debug-mode-status");
        const matrixBtn = document.getElementById("matrix-theme-toggle");
        const matrixStatus = document.getElementById("matrix-theme-status");

        const updateUI = () => {
            const prefs = SudoService.getPrefs();

            if (goatBtn && goatStatus) {
                goatStatus.textContent = prefs.goat ? "ON" : "OFF";
                goatBtn.classList.toggle("bg-red-500/20", !!prefs.goat);
            }
            if (debugBtn && debugStatus) {
                debugStatus.textContent = prefs.debug ? "ON" : "OFF";
                debugBtn.classList.toggle("bg-blue-500/20", !!prefs.debug);
            }
            if (matrixBtn && matrixStatus) {
                matrixStatus.textContent = prefs.matrix ? "ON" : "OFF";
                matrixBtn.classList.toggle("bg-green-500/20", !!prefs.matrix);
            }
        };

        const checkSudo = () => {
            const state = JSON.parse(
                sessionStorage.getItem("terminal_state") || "{}",
            );
            if (state.sudo_mode && section) {
                section.classList.remove("hidden");
                SudoService.applyPrefs();
                updateUI();
            }
        };

        // Check on load
        checkSudo();

        // Listen for unlock event
        window.addEventListener("sudo-mode-unlocked", checkSudo);

        // Bind Toggles
        if (goatBtn) {
            goatBtn.addEventListener("click", (e) => {
                e.stopPropagation();
                const newState = goatStatus?.textContent === "OFF";
                SudoService.toggleGoat(newState);
                updateUI();
            });
        }

        if (debugBtn) {
            debugBtn.addEventListener("click", (e) => {
                e.stopPropagation();
                const newState = debugStatus?.textContent === "OFF";
                SudoService.toggleDebug(newState);
                updateUI();
            });
        }

        if (matrixBtn) {
            matrixBtn.addEventListener("click", (e) => {
                e.stopPropagation();
                const newState = matrixStatus?.textContent === "OFF";
                SudoService.toggleMatrix(newState);
                updateUI();
            });
        }
    }

    document.addEventListener("astro:page-load", initSudoMode);
</script>

{
    showFooter && (
        <div
            class={`px-4 py-2 bg-${isDesktop ? "gray-50" : "gray-50"} dark:bg-gray-800/50 rounded-b-xl border-t border-gray-200 dark:border-gray-${isDesktop ? "800" : "700"}`}
        >
            <div class="flex items-center justify-between text-xs text-gray-500 dark:text-gray-400 font-mono">
                <a
                    href={translatePath("/changelog")}
                    class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                    title="View changelog"
                    role={isDesktop ? "menuitem" : undefined}
                >
                    v{APP_VERSION}
                </a>
                <span class="flex items-center gap-1">
                    <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse" />
                    <span class="text-gray-600 dark:text-gray-400">
                        {t("settings.systemOnline")}
                    </span>
                </span>
            </div>
        </div>
    )
}
